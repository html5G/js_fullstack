<view class="container">
 <view class="section">
  <view class="nav-me">
   <image src="../../assets/image/nav-me.png" />
  </view>
  <scroll-view scroll-x="{{true}}" class="nav" 
   scroll-left="{{scrollLeft}}"
   scroll-width-animation="{{ture}}" >
   <block wx:for="{{navData}}" 
    wx:for-index="id" 
    wx:for-item="navItem"
    wx:key="index">
     <view class="nav-item">{{navItem.name}}</view>
   </block>  
  </scroll-view>
 </view>
</view>